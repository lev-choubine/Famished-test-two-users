<style>
   
form {
  text-align: center;
  }
  
h1 {
  margin-top: 0%;
  margin-bottom: 0%;
}

h4 {
  color: white;
}
   
h2 {
  color:rgb(255, 255, 255);
}

div {
  padding: 0px;
}

label {
  color: rgb(255, 255, 255); 
  font-family: 'Mukta', sans-serif;
  font-size: 20px;
}

a {
  font-size: 30px;
}

p {
  font-size: 25px;
}

input {
  padding: 10px;
  border-radius: 5px;
  width: 40%;
  font-family: 'Mukta', sans-serif;
  font-size: 20px;
  padding: 3px;
  color: rgb(255, 255, 255);
  background-color: rgba(114, 105, 189, 0.432);
  border: 4px solid rgba(245, 245, 245, 0.185);
}
 
select {
  padding: 10px;
  border-radius: 5px;
  width: 40%;
  font-family: 'Mukta', sans-serif;
  font-size: 20px;
  padding: 3px;
  color: rgb(255, 255, 255);
  background-color: rgba(86, 196, 104, 0.26);
  border: 4px solid rgba(245, 245, 245, 0.185);
}

.container{
  background-color: rgba(161, 214, 16, 0.295);
  width: 98%;
  text-align: center;
  padding-top: 5px;
  padding-left: 10px;
  padding-right: -5px;
  padding-bottom: 5%;
  border-radius: 10px;
  font-family: 'Mukta', sans-serif;
  color:rgb(255, 255, 255);
  margin-top: 1%;    
}

.button {
  width: 60%;
  font-family: 'Mukta', sans-serif;
  font-size: 20px;
  padding: 3px;
  border-radius: 10px;
  color: rgb(255, 255, 255);
  background-color: rgba(228, 35, 180, 0.274);
  border: 4px solid rgba(245, 245, 245, 0.274);
}
  
#boxuDaYo{
  position: relative;
  display: flex;
}

#leftColumn {
  flex: 25%; 
  background-color: rgba(24, 92, 92, 0.377); 
  border-radius: 10px;  
}

#rightColumn{
  flex: 30%;
  sbackground-color: rgba(230, 124, 215, 0.295);
  border-radius: 10px;
}

#third {
  flex: 35%;
  background-color: rgba(39, 15, 77, 0.253);
  border-radius: 10px;
}

</style>


<div id="boxuDaYo">
  <div id="leftColumn">
     <div class="container">
        <h2><%= pass %> <h2/>
        <h4>Listed Address</h4>
          <p><%= street %> </p> 
          <p><%= city %></p>
          <p> <%= state %></p>
          <p> <%= zip %></p>
      </div >
      <div class="container">
        <h4> You are looking for</h4>
        <% pick.forEach((p)=>{ %>
        <p><%= p.type %> for $<%= p.price %> </p>
        <form method="POST" action="/address/profile/?_method=DELETE">
            <input hidden type="text" name="type" value="<%= p.type %>">
            <button  type="submit" class="button">Delete from Favorites</button>
        </form>
        <% })  %>
      </div>
      </div>
      <div id="rightColumn">
        <div class="container">
          <form action="/address/profile/?_method=PUT" method="POST">
            <label for="userStreet">Street Address</label>
            <br/>
            <input id="userStreet" type="text" name="street">
            <br/>
            <label for="userCity">City</label>
            <br/>
            <input id="userCity" type="text" name="city">
            <br/>
            <label for="userState">State</label>
            <br/>
            <input id="userState" type="text" name="state">
            <br/>
            <label for="userZip">ZIP code</label>
            <br/>
            <input id="userZip" type="number" name="zip">
            <br/>
            <input class="button" type="submit" value="Check Your Address In">
          </form>
        </div>
        <div class="container">
          <a href="/profile/finds">See your option here</a>
        </div>
      </div>
      <div id="third">
        <div class="container">
           <h2>SELECT YOUR ITEM HERE</h2>
           <form action="/user_food/profile" method="POST">
             <label for="type">Type</label>
             <br/>
             <select name = "type">
             <% find.forEach((f) => {
             %>     
               <option value = "<%= f.type %>" selected><%= f.type %></option>
             <% }) %>
             </select>
             <input id="typeId" type="hidden" name="typeId" value="158158">
             <br/>
             <label for="price">Price</label>
             <br/>
             <input id="price" type="number" name="price">
             <br/>
             <input class="button" type="submit" >
           </form>
        </div>
      </div>
</div>

